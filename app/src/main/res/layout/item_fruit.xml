<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|start"
    android:background="@drawable/corner"
    android:layout_margin="8dp"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:background="@drawable/corner"
        android:src="@drawable/ic_broken_image_24x24_rgb888" />
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Ten SP"
            android:textColor="#0f0"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Gia SP $"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_add2cart"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_btn_green"
        android:src="@drawable/ic_add_shopping_cart_24x24_rgbfff" />

    <ImageButton
        android:id="@+id/ib_dlt"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="8dp"
        android:visibility="gone"
        android:background="@drawable/bg_btn_red"
        android:src="@drawable/ic_delete_24x24_rgbfff" />

    <EditText
        android:id="@+id/ed_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="1"
        android:hint="0"
        android:textSize="18sp"
        android:visibility="gone" />
</LinearLayout>